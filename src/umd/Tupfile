include_rules

LDLIBS = -lpthread

: foreach nucmer.cc |> !cxx |> {umdmummer}
: {umdmummer} |> !ar |> $(LIB_DIR)/libumdmummer.a $(LIB_DIR)/<lib>

LDLIBS += -lessaMEM -lumdmummer
: simplenucmer.cc |> !cxx |> {simplenucmer}
: {simplenucmer} | $(LIB_DIR)/<lib> |> !lxxd |> $(BIN_DIR)/simplenucmer

