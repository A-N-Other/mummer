!cc   = |> ^ CC    %f^ $(CC) $(T_CPPFLAGS) $(CPPFLAGS) $(T_CFLAGS) $(CFLAGS_%B) $(CFLAGS) -c -o %o %f |> %B.o
!cxx  = |> ^ CXX   %f^ $(CXX) $(T_CPPFLAGS) $(CPPFLAGS) $(T_CXXFLAGS) $(CXXFLAGS_%B) $(CXXFLAGS) -c -o %o %f |> %B.o
!ld   = |> ^ LD    %o^ $(CC) $(T_LDFLAGS) $(LDFLAGS) $(LDFLAGS_%B) $(LOADLIBES) $(LDLIBS) %f -o %o |>
!lxxd = |> ^ LXX   %o^ $(CXX) $(T_LDFLAGS) $(LDFLAGS) $(LDFLAGS_%B) $(LOADLIBES) $(LDLIBS) %f -o %o |>
!ar   = |> ^ AR    %o^ $(AR) sruv $(T_ARFLAGS) $(ARFLAGS) %o %f |>

# : foreach *.c |> !cc |>
# : foreach *.cc |> !cxx |>
# : foreach *.cpp |> !cxx |>

ifdef CC
CC  = @(CC)
else
CC = gcc
endif
ifdef CXX
CXX = @(CXX)
else
CXX = g++
endif
AR  = ar

T_CPPFLAGS = -Wall @(CPPFLAGS)
T_CFLAGS = @(CFLAGS)
T_CXXFLAGS = @(CXXFLAGS) -std=c++0x
T_LDFLAGS = @(LDFLAGS)
T_ARFLAGS = @(ARFLAGS)

ifdef BIN_DIR
BIN_DIR = @(BIN_DIR)
else
BIN_DIR = $(TUP_CWD)/bin
endif
ifdef AUX_BIN_DIR
AUX_BIN_DIR = @(AUX_BIN_DIR)
else
AUX_BIN_DIR = $(BIN_DIR)
endif
ifdef SCRIPT_DIR
SCRIPT_DIR = @(SCRIPT_DIR)
else
SCRIPT_DIR = $(BIN_DIR)
endif
ifdef BIN_PATH
BIN_PATH = @(BIN_PATH)
else
BIN_PATH = .
endif

CSH = /bin/csh
PERL = /usr/bin/perl
SED = /bin/sed
