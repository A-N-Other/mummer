#! /bin/bash

set -e
set -x
set -o pipefail

BUILD=$(realpath @BUILDDIR@)
SRC=$(realpath @SRCDIR@)
SCRIPT=$(realpath $1)
# Path to data
D=$BUILD/tests/data
PATH=$BUILD:$BUILD/tests:$SRC/tests:$PATH
# Name
N=$(basename $1 .sh)
# Working directory
WORKDIR=tests/$N
mkdir -p $WORKDIR
cd $WORKDIR

source $SCRIPT
